<?xml version="1.0" ?>
<template>
	<board>olinuxino-micro</board>
	<image path="olinuxino-micro-f22-image.img" size="4G" type="raw"/>
	<partitions>
		<partition fs="ext3" mountpoint="/boot" size="500M" type="primary"/>
		<partition fs="swap" mountpoint="swap" size="1G" type="primary"/>
		<partition fs="ext4" mountpoint="/" size="2G" type="primary"/>
	</partitions>
	<packages>
		<installer>yum</installer>
		<releasever>22</releasever>
		<group>core</group>
		<package>net-tools,chrony</package>
	</packages>
	<stage1loader>none</stage1loader>
	<uboot>files/olinuxino-micro/u-boot-sunxi-with-spl.bin</uboot>
	<rootfiles>none</rootfiles>
	<firmware>none</firmware>
	<kernel type="stock"/>
	<config>
		<hostname>olinuxino-micro</hostname>
		<selinux>disabled</selinux>
		<rootpass>password1234</rootpass>
		<rootsshkey>none</rootsshkey>
		<network>
			<interface config="dhcp" name="eth0"/>
		</network>
	</config>
	<etcoverlay>./etc</etcoverlay>
	<finalizescript>./boards.d/finalize.sh</finalizescript>
	<distro>f22</distro>
	<repos>
	    <repo name="f22arm" path="http://download.fedoraproject.org/pub/mirrors/fedora/linux/releases/22/Everything/armhfp/os/"></repo>
	    <repo name="f22armupdates" path="http://download.fedoraproject.org/pub/fedora/linux/updates/22/armhfp/"></repo>
	</repos>
	<workdir>/tmp/temp</workdir>
	<extlinuxconf>true</extlinuxconf>
</template>
